doctype
html

  include bits/ascii

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/css/front-end/index.css')

    title=properties.title

  body

    header.container
      .row.clear
        .col-sm-7.header-title
          img(src="/images/noodles.png")
          h1.blog-title
            a(href='/') Luke Wilde
              span Web & Games Programmer


        .col-sm-5
          ul.nav.navbar-nav(role="navigation")
            li
              a(href='/portfolio') Portfolio
            li
              a(href='/blog') Blog

  svg(width="100%", height="30px", viewPort="0 0 120 120", version="1.1", xmlns="http://www.w3.org/2000/svg")
    rect(x="0", y="0", width="100%", height="30px", fill="#f5f5f5")

  .lead
    .container
      block lead
        h2.blog-description A freelance web and games developer who helps people build great digital experiences.

  svg.lead-bottom(width="100%", height="30px", viewPort="0 0 120 120", version="1.1", xmlns="http://www.w3.org/2000/svg")
    rect(x="0", y="0", width="100%", height="30px", fill="#f5f5f5")

  .container
    .row.clear
      block content-container
        .col-sm-12.blog-main
          block content

  include footer

  block scripts
    script(src="/js/lib/jquery-2.1.1.min.js")

    include bits/ga.jade
