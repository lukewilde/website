doctype
html

  include bits/ascii

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/css/front-end/index.css')

    title=properties.title

  body

    .container
      .row.clear
        .col-sm-2
          img(src="/images/noodles.png")
        .col-sm-4
          h1.blog-title
            a(href='/') Luke Wilde


        .col-sm-6
          ul.nav.navbar-nav(role="navigation")
            li
              a(href='/blog') Blog
            li
              a(href='/portfolio') Portfolio

      block lead
        h2.lead.blog-description Freelance web and games programmer

      .row.clear
        block content-container
          .col-sm-12.blog-main
            block content

      include footer

  block scripts
    script(src="/js/lib/jquery-2.1.1.min.js")

    include bits/ga.jade
