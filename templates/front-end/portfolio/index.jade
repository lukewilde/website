extends ../layout

mixin portfolioItem(item)

  a(href='/portfolio/' + item.slug)
    img(src=item.smallImage, title=item.headline)
    .hover-info
      p.label #{item.client}: #{item.headline}

block lead
  h2.lead.blog-description My Lovely Portfolio

block content

  .portfolio

    .section-header
      h2 Games
      p I am pretty good at making casual web based games.

    ul

      for item in items
        li
          mixin portfolioItem(item)

    .section-header
      h2 Web
      p I also command all manor of backend wizardry

    ul

      for item in items
        li
          mixin portfolioItem(item)
      for item in items
        li
          mixin portfolioItem(item)
