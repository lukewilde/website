extends ../layout

block content

  h1 Articles
    a.btn.btn-primary.pull-right(href='/admin/article/new') New Article

  .table-responsive
    table.table.table-striped
      thead
        tr
          th Edit
          th Headline
          th Slug
          th Description
          th Live
          th Published
          th Created
          th Delete
      tbody
        for item in items
          tr
            td
              a.btn.btn-primary(href="/admin/article/edit/" + item.slug) Edit
            td
              a(href="/blog/" + item.slug + "?preview")=item.headline
            td=item.slug
            td=item.description
            td=item.published.long
            td
              if item.isLive
                span.label.label-success Yes
              else
                span.label.label-danger No
            td=item.created
            td
              a.btn.btn-danger(href="/admin/article/delete/" + item._id) Delete

