body
  font-family Helvetica, Arial, sans-serif

  span, h1, h2, h3, h4, p, .navbar-nav, .blog-stubs a, footer li, small
    transform scale(1, 0.95)
    letter-spacing 2.3px

  code span
    letter-spacing 0px

h1, h2, h3, h4, .navbar-nav, p.date
  text-transform uppercase

h1.blog-title
  font-size 25px

.lead h2
  text-shadow -5px 4px 9px #CCCACA
  font-size 27px
  color gray
  line-height 1.4
  margin-bottom 0


  @media (max-width: 768px)
    font-size 21px

.navbar-nav li
  font-size 18px

.blog-footer
  font-size 16px
