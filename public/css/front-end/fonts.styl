body
  font-family Helvetica, Arial, sans-serif

  span, h1, h2, h3, h4, p, .navbar-nav, .blog-stubs a, li, small, .blog-stubs p.date, th, td
    transform scale(1, 0.95)
    letter-spacing 2.3px

  code span
    letter-spacing 0px

  .container
    p
      letter-spacing 1px

  .blog-footer
    li
      letter-spacing 1px

h1, h2, h3, h4, .navbar-nav, p.date
  text-transform uppercase

h1.blog-title
  font-size 25px

h2
  font-size 22px
  color gray

.blog-post, .portfolio
  h2

    font-weight bold
    margin 21px 0 10px 0

  h3
    color gray
    font-weight bold
    font-size 22px

.lead h2
  text-shadow -5px 4px 9px #CCCACA
  font-size 27px
  color gray
  line-height 1.4
  margin-bottom 0

  @media (max-width: 400px)
    font-size 16px

  @media (max-width: 768px) and (min-width: 401px)
    font-size 21px

.navbar-nav li
  font-size 18px

.blog-footer
  font-size 16px
