.lead
  .tech
    font-size 17px
    color lightgray
    letter-spacing 1px

.portfolio

  p, li
    letter-spacing 1px
    font-size 16px

  margin-bottom 70px

  ul

    text-align center
    list-style-type none
    padding 0
    margin 0

    li
      display inline-block
      height 208px
      width 298px
      overflow hidden
      position relative
      box-shadow 0px 23px 23px -18px rgba(0,0,0,0.44)
      margin 0 5px

      img
        transition all .2s ease-in-out
        width 100%
        height 100%

      img:hover
        transform scale(1.05)

      .hover-info

        position absolute
        top 0

        .label
          position absolute
          //left -250px
          top 16px
          background-color orange
          border-radius 0 6px 6px 0
          font-weight 100
          font-size 14px

  @media (max-width: 992px)
    ul
      li
        width 350px
        height 244px

  @media (max-width: 768px)
    ul
      li
        height 208px
        width 298px

  @media (max-width: 660px)
    ul
      li
        width 97%
        height auto


  .section-header
    margin 30px 0
