.portfolio

  margin-bottom 70px

  ul

    list-style-type none
    padding 0
    margin 0

    li
      display inline-block
      height 208px
      overflow hidden
      position relative
      border 4px solid orange
      border-radius 0.3em
      margin 0 5px

      img
        transition all .2s ease-in-out

      img:hover
        transform scale(1.05)

      .hover-info

        position absolute
        top 0

        .label
          position absolute
          //left -250px
          top 16px
          background-color orange
          border-radius 0 6px 6px 0
          font-weight 100

  .section-header
    margin 30px 0
