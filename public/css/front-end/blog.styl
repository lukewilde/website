body
  font-family Georgia, "Times New Roman", Times, serif
  color #555

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
  margin-top 0
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight normal
  color #333

@media (min-width 1200px)
  .container
    width 970px

  .blog-masthead
    background-color #428bca
    box-shadow inset 0 -2px 5px rgba(0,0,0,.1)

.blog-nav-item
  position relative
  display inline-block
  padding 10px
  font-weight 500
  color #cdddeb

.blog-nav-item:hover,
.blog-nav-item:focus
  color #fff
  text-decoration none

.blog-nav
  .active
    color #fff
    &:after
      position absolute
      bottom 0
      left 50%
      width 0
      height 0
      margin-left -5px
      vertical-align middle
      content " "
      border-right 5px solid transparent
      border-bottom 5px solid
      border-left 5px solid transparent

.blog-header
  padding-top 20px
  padding-bottom 20px

.blog-title
  margin-bottom 0
  font-size 60px
  font-weight normal

.blog-main
  font-size 18px
  line-height 1.5

.sidebar-module
  padding 15px
  margin 0 -15px 15px

.sidebar-module-inset
  padding 15px
  background-color #f5f5f5
  border-radius 4px

.sidebar-module-inset p:last-child,
.sidebar-module-inset ul:last-child,
.sidebar-module-inset ol:last-child
  margin-bottom 0

.pager
  margin-bottom 60px
  text-align left
  & > li
    & > a
      width 140px
      padding 10px 20px
      text-align center
      border-radius 30px

.blog-post
  margin-bottom 60px

.lead h2.blog-post-title
  margin-bottom 0
  padding-bottom 0

.blog-post-meta
  margin-bottom 20px
  color #999
  font-size 17px


.blog-footer
  padding 40px 0
  color #999
  text-align center
  background-color #f9f9f9

.blog-main pre
  background-color #002b36
  font-size 12px

.blog-main pre code
  color #93a1a1

img, svg
  display block
  margin 0 auto
