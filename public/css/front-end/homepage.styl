header
  .logo
    background-color white
    border-radius 100%
    width 120px
    height 120px

.splash
  position relative

  img
    width 100%
    margin-bottom 30px
    box-shadow: 0px 19px 23px -18px rgba(0,0,0,0.44);

  p.label

    position absolute
    top 56px

    padding 15px 18px
    border-radius 0 6px 6px 0

    font-size 18px
    font-weight 100

    background-color orange

.blog-stubs

  .col-sm-6
    padding 0
    margin 10px 0

    a.title
      padding-left 0
      display block
      color green
      letter-spacing 1.2px
      font-size 18px

    a.title:hover
      color darkgreen
      text-decoration none

    @media (max-width: 768px)
      .col-xs-9
        padding-right 25px
        padding-bottom 15px

      .col-xs-3
        padding-left 25px

  p.date
    text-align center
    color orange
    font-size 20px

    span
      display block
      color gray
      line-height 6px
      font-size 16px
