header
  .logo
    background-color white
    border-radius 100%
    width 120px
    height 120px

.splash
  position relative

  img
    width 100%
    margin-bottom 30px
    box-shadow 0px 19px 23px -18px rgba(0, 0, 0, 0.44)

  p.label

    position absolute
    top 56px

    color white

    padding 15px 18px
    border-radius 0 6px 6px 0

    font-size 18px
    font-weight 100

    background-color orange

    @media (max-width: 660px)

      padding 0.2em 0.6em 0.3em
      font-size 16px
      top 16px
